<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ftusuario"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/zoro"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/nomeUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoro"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/ftusuario"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/mensagemUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koe vk sabe onde o jimbei deixou o barco"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/nomeUsuario"
        app:layout_constraintStart_toEndOf="@id/ftusuario"
        />

    <View
        android:id="@+id/linha"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/mensagemUsuario"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/ftusuario"/>
</androidx.constraintlayout.widget.ConstraintLayout>